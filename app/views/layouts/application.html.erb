<!DOCTYPE html>
<html>
	<head>
	  <title>MusicConcertNetwork</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>



 <!--************* $NAV *************-->

	<nav class="navbar navbar-default navbar--top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>

				<%= link_to(concerts_path, class: "nav--link") do
					image_tag "/images/logo.png"
				end %>

	      <a class="navbar-brand" href="#"><%= image_tag '' %></a>
			</div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      
	      <ul class="nav navbar-nav navbar--top__list">
	        <li class="active"><%= link_to("Concerts", concerts_path, class: "nav--link") %></li>
	        <li class="active"><%= link_to("Cities", concerts_path, class: "nav--link") %></li>
	        <li class="active"><%= link_to("Whatever", concerts_path, class: "nav--link") %></li>
	      </ul>  
     	 	<p class="navbar-text navbar-right">Signed in as <strong>Invited</strong></p>
    	</div>
		</div>
	</nav>

<!--************* $HEADER *************-->




<!--************* $MAIN CONTENT *************-->
	
	
	<div class="container">
		<div class="row">
			<section class="col-sm-8 main-content">
				<%= yield %>
			</section>

			<!--************* $SIDEBAR *************-->
			<aside class="col-sm-4 lateral-info--right">
				<%= render 'shared/sidebar' %>
			</aside>
		</div>
	</div>

	
	
	

	</body>
</html>
