<%= form_for [@concert] do |f| %>
	<%= f.label :band %>
	<%= f.text_field :band, placeholder: "Band name" %>
	<%= f.label :description %>
	<%= f.text_area :description, placeholder: "Description" %>
	<br>
	<%= f.label :city %>
	<%= f.text_field :city %>

	<%= f.label :venue %>
	<%= f.text_field :venue %>
	<br>
	<%= f.label :date %>
	<%= f.date_field :date %>

	<%= f.label :price %>
	<%= f.number_field :price, placeholder: "Ticket Price" %>
	<br>
	<%= f.submit 'Add concert' %>
<% end %>