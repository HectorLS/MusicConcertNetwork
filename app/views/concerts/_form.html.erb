


<%= form_for [@concert] do |f| %>
	<fieldset>
		<legend>New concert</legend>
		<div class="text">
			<%= f.label :band %> <br>
			<%= f.text_field :band, placeholder: "Band name" %>
		</div>
		<div class="textarea">
			<%= f.label :description %> <br>
			<%= f.text_area :description, placeholder: "Description", id: "textarea" %>
		</div>
		<div class="text">
			<%= f.label :city %>
			<%= f.text_field :city %>
			
			<%= f.label :venue %>
			<%= f.text_field :venue %>
		</div>
		<div class="text">
			<%= f.label :date %>
			<%= f.date_field :date %>

			<%= f.label :price %>
			<%= f.number_field :price, placeholder: "Ticket Price" %>
		</div>
		<%= f.submit 'Add concert' %>
	</fieldset>
<% end %>


